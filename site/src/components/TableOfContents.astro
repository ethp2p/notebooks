---
// Floating Table of Contents component
// Extracts headings from notebook content and displays a sticky TOC
import { Icon } from './Icon';
---

<nav class="sticky top-8 max-h-[calc(100vh-4rem)] overflow-y-auto p-5 bg-card border border-border  text-[0.8125rem] transition-all duration-300 dark:bg-[oklch(0.14_0.018_260/80%)] dark:backdrop-blur-lg max-xl:hidden" id="toc">
  <div class="flex items-center gap-2 mb-4 pb-3 border-b border-border text-muted-foreground">
    <Icon name="List" size={14} client:load />
    <span class="font-mono font-semibold text-[0.6875rem] uppercase tracking-widest">On this page</span>
  </div>
  <ul class="list-none p-0 m-0 flex flex-col gap-0.5" id="toc-list">
    <!-- Populated by JavaScript -->
  </ul>
</nav>

<script>
  function initTOC() {
    const tocList = document.getElementById('toc-list');
    const tocContainer = document.getElementById('toc');
    if (!tocList || !tocContainer) return;

    // Find all headings in notebook content
    const content = document.querySelector('.notebook-content');
    if (!content) return;

    const headings = content.querySelectorAll('h1, h2, h3');
    if (headings.length === 0) {
      tocContainer.style.display = 'none';
      return;
    }

    // Clear existing items
    tocList.innerHTML = '';

    // Track TOC items for bottom-of-page handling
    const tocLinks: HTMLAnchorElement[] = [];

    // Build TOC
    headings.forEach((heading, index) => {
      // Skip the main title (first h1)
      if (heading.tagName === 'H1' && index === 0) return;

      // Ensure heading has an ID
      if (!heading.id) {
        heading.id = `heading-${index}`;
      }

      const li = document.createElement('li');
      li.className = `m-0 animate-[fadeIn_0.3s_ease-out_backwards]`;
      li.style.animationDelay = `calc(${index} * 0.02s)`;
      if (heading.tagName === 'H3') {
        li.classList.add('pl-3.5');
      }

      const a = document.createElement('a');
      a.href = `#${heading.id}`;
      a.textContent = heading.textContent?.replace(/Â¶/g, '').trim() || '';
      a.className = 'toc-link block py-1.5 px-2.5 text-muted-foreground no-underline  border-l-2 border-transparent -ml-2.5 transition-all duration-200 leading-snug text-xs hover:text-foreground hover:bg-muted hover:border-l-[var(--mauve-6)]';

      li.appendChild(a);
      tocList.appendChild(li);
      tocLinks.push(a);
    });

    const activeClasses = ['active', 'text-foreground', 'border-l-primary', 'bg-[var(--mauve-3)]', 'font-medium', 'dark:bg-[oklch(0.25_0.03_280/50%)]', 'dark:shadow-[0_0_20px_oklch(0.55_0.12_280/10%)]'];

    const setActive = (link: Element) => {
      tocList.querySelectorAll('.toc-link').forEach(l => {
        l.classList.remove(...activeClasses);
      });
      link.classList.add(...activeClasses);
    };

    // Highlight active section on scroll
    const observerOptions = {
      rootMargin: '-80px 0px -70% 0px',
      threshold: 0
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const id = entry.target.id;
          const tocLink = tocList.querySelector(`a[href="#${id}"]`);
          if (tocLink) {
            setActive(tocLink);
          }
        }
      });
    }, observerOptions);

    headings.forEach(heading => {
      if (heading.id) {
        observer.observe(heading);
      }
    });

    // Select last item when scrolled to bottom
    const checkBottomScroll = () => {
      const scrollTop = window.scrollY;
      const docHeight = document.documentElement.scrollHeight - window.innerHeight;
      if (docHeight > 0 && scrollTop >= docHeight - 5 && tocLinks.length > 0) {
        setActive(tocLinks[tocLinks.length - 1]);
      }
    };

    window.addEventListener('scroll', checkBottomScroll, { passive: true });

    // Smooth scroll on click
    tocList.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (target.tagName === 'A') {
        e.preventDefault();
        const href = target.getAttribute('href');
        if (href) {
          const heading = document.querySelector(href);
          if (heading) {
            heading.scrollIntoView({ behavior: 'smooth', block: 'start' });
            history.pushState(null, '', href);
          }
        }
      }
    });
  }

  // Run on load
  initTOC();

  // Re-run on Astro page transitions
  document.addEventListener('astro:page-load', initTOC);
</script>

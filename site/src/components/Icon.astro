---
import {
  Activity,
  AlertCircle,
  Calendar,
  ChevronLeft,
  ChevronRight,
  FileText,
  Grid3x3,
  Layers,
  List,
  PanelLeft,
} from 'lucide-static';

interface Props {
  name: string;
  size?: number;
  class?: string;
  strokeWidth?: number;
}

const { name, size = 24, class: className = '', strokeWidth = 2 } = Astro.props;

const icons: Record<string, string> = {
  Activity,
  AlertCircle,
  Calendar,
  ChevronLeft,
  ChevronRight,
  FileText,
  Grid3x3,
  Layers,
  List,
  PanelLeft,
};

const svgString = icons[name] || FileText;

// Modify SVG attributes
const modifiedSvg = svgString
  .replace(/width="24"/, `width="${size}"`)
  .replace(/height="24"/, `height="${size}"`)
  .replace(/stroke-width="2"/, `stroke-width="${strokeWidth}"`)
  .replace(/class="[^"]*"/, `class="${className}"`);
---

<Fragment set:html={modifiedSvg} />
